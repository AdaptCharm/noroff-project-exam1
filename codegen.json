
{
  "schema": "https://noroff-explore.flywheelsites.com/graphql",
  "documents": "./wordpress/**/*.ts",
  "generates": {
    "./wordpress/graphql-operations.ts": {
      "plugins": [
        "typescript",
        "typescript-operations",
        "typed-document-node"
      ]
    },
    "./wordpress/schema.graphql": {
      "plugins": ["schema-ast"]
    }
  },
  "hooks": {
    "afterAllFileWrite": ["prettier --write"]
  }
}